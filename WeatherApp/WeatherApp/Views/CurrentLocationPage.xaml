<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.CurrentLocationPage"
             Title="â€» Weather">
  <StackLayout Spacing="10" Padding="10"
               BackgroundColor="White">
    <StackLayout Padding="10"
                 BackgroundColor="Accent">
      <Label HorizontalOptions="CenterAndExpand"
             VerticalOptions="CenterAndExpand"
             Text="{Binding Name}"
             FontSize="20" />
      <Label HorizontalOptions="CenterAndExpand"
             VerticalOptions="CenterAndExpand"
             Text="{Binding Country}"
             FontSize="Small" />
    </StackLayout>
    <TableView>
      <TableRoot>
        <TableSection>
          <TextCell Text="Temperature"
                    Detail="{Binding TemperatureString}" />
        </TableSection>
        <TableSection>
          <TextCell Text="Humidity"
                    Detail="{Binding HumidityString}" />
        </TableSection>
        <TableSection>
          <TextCell Text="Latitude"
                    Detail="{Binding Latitude}" />
        </TableSection>
        <TableSection>
          <TextCell Text="Longitude"
                    Detail="{Binding Longitude}" />
        </TableSection>
      </TableRoot>
    </TableView>
    <Button Padding="10"
            Text="Get from current location"
            Clicked="OnGetWeatherButtonClickedAsync" />
  </StackLayout>
</ContentPage>